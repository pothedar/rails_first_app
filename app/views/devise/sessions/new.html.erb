<div class="container">
  <div class = "page-header"><h2>Log in</h2></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8">
        <div class="field">
          <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Email Address"%>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field form-check">
            <%= f.label :remember_me, class: "form-check-label" do %>
              <%= f.check_box :remember_me, class: "form-check-input"%>
               Remember Me
            <% end -%>
          </div>
        <% end %>

        <div class="field">
          <%= f.submit "Log in", class: "btn btn-primary btn-block"%>
        </div>
      </div>
    </div>
  <% end %>

  <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8">
    <hr>
    <%= render "devise/shared/links" %>
  </div>
    
</div>
