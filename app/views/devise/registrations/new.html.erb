<div class = "container">
  <div class = "page-header"><h2>Sign up</h2></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class = "row">
      <div class = "col-lg-6 col-md-6 col-sm-8 col-xs-8">
        <div class="field">
          <%= f.text_field :first_name, autofocus: true, required: true, class: "form-control", placeholder: "First Name" %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, autofocus: true, required: true, class: "form-control", placeholder: "Last Name" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Email Address" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "form-control", placeholder: "Password Confirmation" %>
        </div>

        <div class="field">
          <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="form-group">
        <p>Already have an account?</p>
        <p><%= render "devise/shared/links" %></p>
      </div>
    </div>
  </div>
</div>
