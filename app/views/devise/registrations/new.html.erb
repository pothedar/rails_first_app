<div class = "container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class = "row">
      <div class = "col-lg-6 col-md-6 col-sm-8 col-xs-8">
        <hr>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "email address" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "form-control", placeholder: "password" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="form-group">
        <hr>
        <p>Already have an account, <%= render "devise/shared/links" %></p>
      </div>
    </div>
  </div>
</div>
