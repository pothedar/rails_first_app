
<div class="container-fluid">
  <h1>All Users</h1>
  <p>The table below shows registered users in the system</p> 
  <br>          
  <table class="table table-hover">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class: "btn btn-default" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', user, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
  </table>
</div>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-default' %>
