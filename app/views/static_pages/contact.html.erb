<h1>Contact Us</h1>

<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag(:name, "", class: "form-control", placeholder: "Enter Name", required: "true") %>
      </div>
      <div class="form-group">
        <%= label_tag :email, "Email Address" %>
        <%= text_field_tag(:email, "", class: "form-control", placeholder: "Enter Email", required: "true", type: "email") %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_field_tag(:message, "", class: "form-control", placeholder: "Enter Message", required: "true") %>
      </div>
    </div>
  </div>
<%= submit_tag "Send" %>
<% end %>